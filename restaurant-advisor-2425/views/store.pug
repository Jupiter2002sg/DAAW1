extends layout

include mixins/_reviewForm
include mixins/_review

block content
    .container
        .mb-3.card
            img.card-img-top(src=`/uploads/${store.photo || 'store.png'}`)
            .card-body
                h5.fs-0 #{store.name}
                p.mb-0= store.geolocation

        .no-gutters.row
            .pr-lg-2.col-lg-12
                .card
                    .card-body
                        p=store.description
                            if store.tags
                                each tag in store.tags
                                    a.badge.bg-light.textprimary(href=`/tags/${tag}`) #{tag}

        if geolocation 
            .no-gutters.row.pt-3.col-lg-12
                .card
                    .card-body
                        h4 Map
                        #map(style="height: 400px;")

        if user
            .no-gutters.row
                .pt-3.lg-2.col-lg-12
                    .card
                        .card-body
                            +reviewForm(store)
        if store.reviews
            each r in store.reviews
                .no-gutters.row
                    .pt-3.lg-2.col-lg-12
                        .card
                            .card-body
                                +review(r)
    
block scripts
  // Cargar el script de Leaflet desde la carpeta dist
  script(src="/dist/leaflet.js")

  // Checkear coordenadas
  if geolocation
      script.
        var customIcon = L.icon({
            iconUrl: '/icons/marker.png',  
            iconSize: [30, 30], 
            iconAnchor: [12, 41], 
            popupAnchor: [3, -35],
            shadowSize: [41, 41] 
        });

        document.addEventListener('DOMContentLoaded', function () {
            const map = L.map('map').setView([0, 0], 2); // Coordenadas iniciales dummy

            L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
                maxZoom: 18,
                attribution: '© OpenStreetMap contributors'
            }).addTo(map);

            // Crear instancia del geocoder
            const geocoder = L.Control.Geocoder.nominatim();
            // Usar geocoder para convertir la dirección a coordenadas
            geocoder.geocode('#{store.address}', function(results) {
                if (results && results.length > 0) {
                    const { center } = results[0];
                    map.setView(center, 15);

                    L.marker(center, {icon: customIcon})
                        .addTo(map)
                        .bindPopup('<strong>#{store.name}</strong><br>Rating: #{store.averageRating} / 5')
                        .openPopup();
                } else {
                    console.error('No se pudo geocodificar la dirección.');
                }
            });
        });